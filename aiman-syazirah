    <script>
        function showContactModal() {
            document.getElementById('contactModal').classList.add('show');
        }

        function showRSVPModal() {
            document.getElementById('rsvpModal').classList.add('show');
        }

        function showLocationModal() {
            document.getElementById('locationModal').classList.add('show');
        }

        function showMessagesModal() {
            document.getElementById('messagesModal').classList.add('show');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('show');
        }

        function addToCalendar() {
            const eventDetails = {
                title: 'Majlis Perkahwinan Aiman & Syazirah',
                start: '20251019T030000Z',
                end: '20251019T080000Z',
                description: 'Majlis Kesyukuran - Muhammad Nuraiman & Wan Nur Syazirah',
                location: 'Dewan Mareesa Pekan Melor'
            };

            const googleCalendarUrl = `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(eventDetails.title)}&dates=${eventDetails.start}/${eventDetails.end}&details=${encodeURIComponent(eventDetails.description)}&location=${encodeURIComponent(eventDetails.location)}`;
            
            window.open(googleCalendarUrl, '_blank');
        }

        // RSVP Form Handler
        document.getElementById('rsvpForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Terima kasih! RSVP anda telah diterima. Kami tidak sabar untuk bertemu dengan anda di majlis kami! 💕');
            closeModal('rsvpModal');
            this.reset();
        });

        // Guest Message Form Handler
        document.getElementById('messageForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('guestName').value;
            const message = document.getElementById('guestMessage').value;
            
            if (name && message) {
                addGuestMessage(name, message);
                this.reset();
                alert('Terima kasih atas ucapan yang indah! Ucapan anda telah dihantar kepada pengantin. 🌸');
            }
        });

        function addGuestMessage(name, message) {
            const messagesContainer = document.getElementById('messagesContainer');
            const flowers = ['🌸', '🌺', '🌹', '🌷', '🌼', '🌻'];
            const randomFlower = flowers[Math.floor(Math.random() * flowers.length)];
            
            const messageElement = document.createElement('div');
            messageElement.className = 'message-card p-4 rounded-xl fade-in';
            messageElement.innerHTML = `
                <div class="flex items-start space-x-3">
                    <div class="text-2xl">${randomFlower}</div>
                    <div class="flex-1">
                        <div class="font-semibold text-gray-800">${name}</div>
                        <p class="text-gray-700 mt-1">${message}</p>
                        <div class="text-xs text-gray-500 mt-2">Baru sahaja</div>
                    </div>
                </div>
            `;
            
            messagesContainer.insertBefore(messageElement, messagesContainer.firstChild);
        }

        // Close modals when clicking outside
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    this.classList.remove('show');
                }
            });
        });

        // Close modals with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                document.querySelectorAll('.modal.show').forEach(modal => {
                    modal.classList.remove('show');
                });
            }
        });
    </script>
